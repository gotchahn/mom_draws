= render "sidebar"

.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
  %h1.page-header
    %span.fa.fa-female.fa-lg
    Mamis Ayudantes

  = render partial: "shared/notice_for"

  .row
    - if @mamis.any?
      .table-responsive
        %table.table.table-striped
          %thead
            %tr
              %th Código
              %th Nombre
              %th Email
              %th Teléfono
          %tbody
            = render @mamis
    - else
      %em No se ha agregado ninguna mami.


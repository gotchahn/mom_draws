.form-group
  = f.label :name, class: "col-sm-2 control-label"
  .col-sm-10
    = f.text_field :name, class: "form-control"

.form-group
  = f.label :description, class: "col-sm-2 control-label"
  .col-sm-10
    = f.text_area :description, class: "form-control", rows: "3"

.form-group
  = f.label :goal, class: "col-sm-2 control-label"
  .col-sm-10
    .input-group
      .input-group-addon Lps.
      = f.number_field :goal, class: "form-control"
- unless @event.tickets.any?
  .form-group
    = f.label :ticket_price, class: "col-sm-2 control-label"
    .col-sm-10
      .input-group
        .input-group-addon Lps.
        = f.number_field :ticket_price, class: "form-control"

.form-group
  = f.label :avatar_url, "URL Imagen", class: "col-sm-2 control-label"
  .col-sm-10
    = f.url_field :avatar_url, class: "form-control", placeholder: "Direcci√≥n de Internet de la Imagen"
